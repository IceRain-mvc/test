/* pages/custom/itemSetting/itemSetting.wxss */
@import "item-template/item-template.wxss";
#title-container {
  position:absolute;
  width: 500rpx;
  left: 50%;
  margin-left: -250rpx;
  top:5%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

#title-text {
    width:80rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    text-align: center;
}

#title {
    height: 80rpx;
}

#title input {
  width: 350rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1px dotted white;
  border-radius: 5px;
  font-size: 36rpx;
}

#item-list{
    position: absolute;
    top:15%;
    bottom: 40%;
}

#item-list view{
    margin: 10rpx auto;
    height: 100rpx;
}

.item{

}

#add{
    width: 100rpx;
    text-align: center;
    height: 120rpx;
    line-height: 120rpx;
}

#add image{
    width:60rpx;
    height: 60rpx;
}

#save-container{
    position:absolute;
    bottom:20%;
    left: 50%;
    width: 240rpx;
    height: 100rpx;
    margin-left: -120rpx;
    border: 1px solid white;
    border-radius: 20rpx;
    line-height: 100rpx;
    text-align: center;
    color:white;
}

